{
  "name": "test",
  "version": "1.0.0",
  "description": "",
  "main": "mic.js",
  "marcel": {
    "voice": {
      "variant": "f6",
      "wordgap": 2,
      "speed": 150,
      "pitch": 2,
      "amplitude": 90
    },
    "context": {
      "all": {
        "listen-cmd-params": "-inmic yes"
      },
      "raspi": {
        "listen-cmd-params": "-adcdev sysdefault"
      },
      "release": {
        "listen-cmd-params": "-logfn /dev/null"
      },
      "linux": {}
    },
    "states": {
      "activity": {
        "initial": "passive",
        "events": [
          { "name": "let's talk", "from": "passive", "to": "active" },
          { "name": "shut up", "from": "active", "to": "passive" }
        ]
      },
      "lang": {
        "initial": "en",
        "events": [
          { "name": "speak french", "from": "en", "to": "fr" },
          { "name": "parler anglais", "from": "fr", "to": "en" }
        ]
      }
    }
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node .",
    "build": "npm run build:listener",
    "build:listener": "./build.sh",
    "build:lang": "node build-lang.js && rm *.lm *.dic *.log_* *.sent *.vocab *.tgz ",
    "listen:en": "./listen -continuous no  -hmm ../pocketsphinx/model/en-us/en-us/",
    "listen:fr": "./listen -continuous yes -hmm lang/fr -dict lang/fr/fr.dic -lm lang/fr/fr-small.lm.bin -vad_threshold 3.5",
    "listen:fr:usePredefinedWords": "./listen -continuous yes -dict lang/fr/predefined.dic -lm lang/fr/predefined.lm",
    "listen:en:usePredefinedWords": "./listen -continuous no  -hmm ../pocketsphinx/model/en-us/en-us/ -lm lang/en/predefined.lm -dict lang/en/predefined.dic"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "javascript-state-machine": "^2.3.5",
    "lmtool": "^2.0.3",
    "make-prop-stream": "^1.0.0",
    "randomvoice": "0.0.0",
    "request": "^2.73.0",
    "speaker": "^0.3.0",
    "speech-stream": "^1.0.0",
    "stream-array": "^1.1.2",
    "wav": "^1.0.0"
  }
}
